<!DOCTYPE html>
<html lang="en">
<%- include('partials/htmlHead', {title: title}) %>

    <body>
        <%- include('partials/navbar', {user: user}) %>
            <div class="container-fluid mt-3">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <div class="fs-2 fw-semibold">
                        <i class="bi bi-hdd"></i> <a href="/">My trunk</a> <i class="bi bi-arrow-right"></i> <span>
                            <%=fileDetails.name%>
                        </span>
                    </div>
                    <div class="d-flex gap-2">
                    </div>

                </div>
                <div class="card">
                    <div class="card-header">
                        File details:
                    </div>
                    <div class="card-body">
                        <h3 class="card-title">
                            <%= fileDetails.name%>
                        </h3>
                        <ul class="list-group list-group-flush mb-1">
                            <li class="list-group-item"><span class="fw-semibold">Size:</span>
                                <%= fileDetails.size%>KB
                            </li>
                            <li class="list-group-item"><span class="fw-semibold">Created at:</span>
                                <%= formatRelative(fileDetails.createdAt, new Date()) %>
                            </li>
                            <li class="list-group-item"><span class="fw-semibold">Folder:
                                </span>
                                <% if(locals.fileDetails.Folder){ %>
                                    <%= fileDetails.Folder.name%>
                                        <% } else {%>
                                            none
                                            <% } %>
                                                <div class="accordion mt-3" id="accordionExample">
                                                    <div class="accordion-item">
                                                        <h2 class="accordion-header">
                                                            <button class="accordion-button collapsed" type="button"
                                                                data-bs-toggle="collapse" data-bs-target="#collapseOne"
                                                                aria-expanded="true" aria-controls="collapseOne">
                                                                Move folder
                                                            </button>
                                                        </h2>
                                                        <div id="collapseOne" class="accordion-collapse collapse"
                                                            data-bs-parent="#accordionExample">
                                                            <div class="accordion-body">
                                                                <form action="/file/<%= fileDetails.id%>/update"
                                                                    method="post">
                                                                    <select class="form-select" name="folder_id"
                                                                        aria-label="Select folder..." id="folder"
                                                                        required>
                                                                        <option selected disabled value="">
                                                                            Select folder...
                                                                        </option>
                                                                        <% if(locals.allFolders) { %>
                                                                            <% locals.allFolders.forEach((folder)=> { %>
                                                                                <option value="<%= folder.id%>">
                                                                                    <%= folder.name%>
                                                                                </option>
                                                                                <% }); %>
                                                                                    <% if(locals.fileDetails.Folder){ %>
                                                                                        <option value="none">Disconnect
                                                                                            folder
                                                                                        </option>
                                                                                        <% } %>
                                                                                            <% } else {%>
                                                                                                <option disabled
                                                                                                    value="">
                                                                                                    No folders to show
                                                                                                </option>
                                                                                                <% } %>
                                                                    </select>
                                                                    <button class="btn btn-primary mt-3"
                                                                        type="submit">Move</button>
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                            </li>
                            <li class="list-group-item"></li>

                        </ul>
                        <a href="<%= fileDetails.url %>" target="_blank" rel="noreferrer"
                            class="btn btn-primary">Preview</a>
                        <a href="<%= downloadLinkGenerator(fileDetails.name, fileDetails.url)%>"
                            class="btn btn-primary">Download</a>

                    </div>
                </div>
            </div>
    </body>

</html>